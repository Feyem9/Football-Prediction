# ===========================================
# PRONOSCORE - Configuration Production
# ===========================================

# Database
DATABASE_URL=postgresql://user:password@host:5432/pronoscore_prod

# JWT Configuration
SECRET_KEY=GENERATE_A_NEW_SECRET_KEY_FOR_PRODUCTION
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
PASSWORD_RESET_EXPIRE_HOURS=1

# Environment
ENV=production

# SMTP Production (SendGrid)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=SG.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
SMTP_USE_TLS=true
FROM_EMAIL=noreply@ton-domaine.com

# Frontend URL (pour les liens dans les emails)
FRONTEND_URL=https://ton-domaine.com
